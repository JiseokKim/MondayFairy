<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/dialog_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/dialog_content_scroll"
        android:background="@drawable/line_bottom_view"
        app:layout_constraintTop_toBottomOf="@id/dialog_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.7">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_message_dialog_view"
        android:textColor="#000000"
        android:textSize="@dimen/dev_purpose_dialog_content_text_size"
        app:layout_constraintTop_toBottomOf="@id/dialog_content_scroll"
        app:layout_constraintStart_toStartOf="@id/dialog_content_scroll"
        app:layout_constraintEnd_toEndOf="@id/dialog_content_scroll"
        tool:text="@string/alarm_describe"/>
    </ScrollView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_copyright_dialog_view"
        android:textColor="#000000"
        android:textSize="@dimen/dev_purpose_dialog_content_text_size"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/dialog_content_scroll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tool:text="@string/alarm_describe"/>

</androidx.constraintlayout.widget.ConstraintLayout>